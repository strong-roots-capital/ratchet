{
  "name": "@strong-roots-capital/ratchet",
  "version": "3.0.5",
  "description": "Filter a stream of values monotonically",
  "main": "dist/src/ratchet.js",
  "types": "dist/src/ratchet.d.ts",
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "build": "tsc",
    "clean": "rm -rf dist",
    "ava": "ava -s -v",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strong-roots-capital/ratchet"
  },
  "keywords": [
    "ratchet",
    "monotonic"
  ],
  "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/strong-roots-capital)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strong-roots-capital/ratchet/issues"
  },
  "homepage": "https://github.com/strong-roots-capital/ratchet",
  "dependencies": {
    "fp-ts": "^2.6.6"
  },
  "devDependencies": {
    "@types/chai": "4.3.0",
    "@types/node": "16.11.12",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "ava": "3.15.0",
    "ava-fast-check": "1.1.2",
    "chai": "4.3.4",
    "codecov": "3.8.3",
    "eslint": "7.32.0",
    "fast-check": "1.26.0",
    "nyc": "15.1.0",
    "random-int": "2.0.1",
    "random-record": "2.0.3",
    "timeseries-record": "1.0.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.10"
  },
  "files": [
    "dist/src/"
  ],
  "ava": {
    "files": [
      "!dist/**/*.d.ts",
      "test/**/test-*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
